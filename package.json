{
  "name": "pawmode",
  "version": "1.4.0",
  "description": "Open-source Personal Assistant Wizard for Claude Code. Turn Claude Code into your PA with CLI tools and skills.",
  "type": "module",
  "bin": {
    "openpaw": "dist/index.js"
  },
  "files": [
    "dist",
    "skills"
  ],
  "scripts": {
    "build": "tsdown && node -e \"const fs=require('fs');const f='dist/index.js';fs.writeFileSync(f,'#!/usr/bin/env node\\n'+fs.readFileSync(f,'utf8'));fs.chmodSync(f,0o755)\"",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "personal-assistant",
    "ai",
    "skills",
    "cli",
    "wizard",
    "openpaw",
    "telegram"
  ],
  "author": "daxaur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daxaur/openpaw.git"
  },
  "homepage": "https://github.com/daxaur/openpaw",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.63",
    "@clack/prompts": "^0.10.0",
    "@grammyjs/hydrate": "^1.6.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "gradient-string": "^3.0.0",
    "grammy": "^1.40.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^22.0.0",
    "tsdown": "^0.11.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
